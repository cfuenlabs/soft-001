{% css %}
	.ProductImage {
		width: 15vw;
		aspect-ratio: 1/1;
	}

	.Product:hover {
		transform: scale(1.2);
	}
{% endcss %}

{%- for categoria in categorias %}
	<h1 style="text-align: center;">{{categoria}}</h1>
	<div style="display: flex; flex-direction: row; justify-content: center; gap: 30px; flex-wrap: wrap; padding-left: 50px; padding-right: 50px;">
	{%- for producto in productosCategorias %}
		{% if producto.categoria == categoria %}
		<a
		href="/productos/{{loop.index-1}}"
		class="Product"
		style="display: flex; flex-direction: column; justify-content: center; align-items: center; color: inherit; text-decoration: none; max-width: 25vw;">
			{% if producto.imagenes %}
				<div
					class="w-box ProductImage"
					style="
								background-image: url('/img/productos/{{ producto.imagenes[0].path }}');
								background-position: center;
								background-size: contain;
								background-repeat: no-repeat;
							"
				></div>
			{% else %}
				<div
					class="w-box ProductImage"
					style="
								background-image: url('/img/productos/{{ producto.imagen }}');
								background-position: center;
								background-size: contain;
								background-repeat: no-repeat;
							"
				></div>
			{% endif %}
			<span style="text-align: center; font-weight: 500;">
			{% if producto.nombre == '' %}
				{{ producto.categoria }}
			{% else %}
				{{ producto.categoria }} {{ producto.nombre }}
			{% endif %}
			</span>
		</a>
		{% endif %}
	{% endfor -%}
	</div>
{% endfor -%}
